{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "types": ["vitest/globals"]
  },
  "include": [
    "src/index.browser.ts",
    "src/types.ts",
    "src/constants.ts",
    "src/env.edge.ts",
    "src/environment-fallback-manager.edge.ts",
    "src/phase-token-loader.edge.ts",
    "src/phase.edge.ts",
    "src/phase-sdk-client.edge.ts",
    "src/phase-sdk-cache.edge.ts",
    "src/phase-error-handler.ts",
    "src/phase-monitoring.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}