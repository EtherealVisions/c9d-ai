{
  "$schema": "../env-tools/schemas/env-config-schema.json",
  "appName": "AI.C9d",
  "displayName": "C9D Configuration Utilities",
  "description": "Shared configuration utilities for the C9D AI platform",
  "envVars": {
    "required": [],
    "optional": [
      {
        "name": "NODE_ENV",
        "description": "Node.js environment",
        "type": "string",
        "enum": ["development", "production", "test"],
        "default": "development"
      },
      {
        "name": "CONFIG_DEBUG",
        "description": "Enable configuration debugging",
        "type": "boolean",
        "default": false
      }
    ]
  },
  "validation": {
    "strict": false,
    "warnOnMissing": false,
    "failOnInvalid": false
  }
}