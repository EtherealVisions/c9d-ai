# pnpm configuration
auto-install-peers=true
strict-peer-dependencies=false
shamefully-hoist=false
prefer-workspace-packages=true
save-workspace-protocol=rolling
node-linker=isolated

# Registry and security
registry=https://registry.npmjs.org/
audit-level=moderate

# Performance optimizations
fetch-retries=3
fetch-retry-factor=10
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Workspace specific
link-workspace-packages=true
shared-workspace-lockfile=true

# Drizzle ORM specific hoisting
public-hoist-pattern[]=*drizzle*
public-hoist-pattern[]=@types/pg
public-hoist-pattern[]=pg
public-hoist-pattern[]=postgres
public-hoist-pattern[]=ioredis
public-hoist-pattern[]=@types/ioredis