{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "remoteCache": {
    "enabled": true
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.local",
        ".env.example"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "!dist/cache/**"
      ],
      "env": [
        "NODE_ENV",
        "PHASE_SERVICE_TOKEN",
        "DATABASE_URL",
        "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
        "CLERK_SECRET_KEY",
        "NEXT_PUBLIC_SUPABASE_URL",
        "SUPABASE_SERVICE_ROLE_KEY"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "PHASE_SERVICE_TOKEN"
      ]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".eslintrc*",
        ".eslintignore"
      ],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig.json",
        "tsconfig.*.json"
      ],
      "outputs": [
        "tsconfig.tsbuildinfo",
        "dist/**/*.d.ts"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "vitest.config.ts",
        "vitest.setup.ts",
        "**/__tests__/**",
        "**/*.test.*",
        "**/*.spec.*"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "NODE_ENV"
      ]
    },
    "test:run": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "vitest.config.ts",
        "vitest.setup.ts",
        "**/__tests__/**",
        "**/*.test.*",
        "**/*.spec.*"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "NODE_ENV"
      ]
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [
    "package.json",
    "pnpm-workspace.yaml",
    "turbo.json",
    ".env.example"
  ],
  "globalEnv": [
    "NODE_ENV",
    "CI"
  ]
}